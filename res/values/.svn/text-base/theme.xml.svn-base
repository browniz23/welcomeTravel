<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" mce_bogus="1" parent="android:Theme.Black.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/ActAnimation</item>
    </style>

    <style name="AppThemeFullscreen" mce_bogus="1" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/ActAnimation</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>