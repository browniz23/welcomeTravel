    <style name="Btn.Menu.marker">
        <item name="android:drawableLeft">@drawable/btn_marker</item>
    </style>

    <style name="TextView">
        <item name="android:textScaleX">1</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_content_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dimen_textsize_title</item>
    </style>

</resources>