<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img_dialog_background"
    android:gravity="center"
    android:orientation="vertical" >

    <!--
         <TextView
        android:id="@+id/tv_contents"
        style="@style/TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="@dimen/dimen_textsize_dialog" />
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal" >

        <RadioGroup 
            android:id="@+id/rgAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radioPlus"
            android:orientation="horizontal">
            
            <RadioButton 
                android:id="@id/radioPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수입"
                android:textColor="#000000"/>
            <RadioButton 
                android:id="@+id/radioMinus"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지출"
                android:textColor="#000000"/>
        </RadioGroup>
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/addyearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2013"
            android:textColor="#000000"
            android:textSize="16dp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 년 "
            android:textColor="#000000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/addmonthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="#000000"
            android:textSize="16dp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 월 "
            android:textColor="#000000"
            android:textSize="13dp" />
        
        <TextView
            android:id="@+id/adddayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="#000000"
            android:textSize="16dp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 일"
            android:textColor="#000000"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btn_day"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_common"
            android:text="날짜선택"
            android:textColor="@color/color_dialog_btn_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내역"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금액"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/editMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:numeric="integer"
            android:text="0"
            android:singleLine="true" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal" >

    <Button
        android:id="@+id/btn_save"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_common"
        android:text="추가"
        android:textColor="@color/color_dialog_btn_text" />
    
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_common"
        android:text="취소"
        android:textColor="@color/color_dialog_btn_text" />
    </LinearLayout>

</LinearLayout>