<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/txt_sche_update_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="6"
                android:hint="제목"
                android:singleLine="true" />

            <Button
                android:id="@+id/btn_sche_save"
                style="@style/Btn.Menu.check"
                android:layout_width="45dp"
                android:layout_height="43dp"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn_common"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_sche_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:hint="2013. 10. 18 금요일"
                android:textColor="#000" />

            <TextView
                android:id="@+id/txt_sche_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:hint="오후 1 : 45"
                android:textColor="#000" />

            <Button
                android:id="@+id/btn_sche_day"
                android:layout_width="60dp"
                android:layout_height="42dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/btn_common"
                android:text="날짜설정"
                android:textColor="@color/color_dialog_btn_text" />

            <Button
                android:id="@+id/btn_sche_time"
                android:layout_width="60dp"
                android:layout_height="42dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/btn_common"
                android:text="시간설정"
                android:textColor="@color/color_dialog_btn_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/txt_sche_update_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:hint="내용" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/txt_sche_update_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:hint="장소명"
                android:singleLine="true" />

            <EditText
                android:id="@+id/txt_sche_update_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:hint="주소" />

            <EditText
                android:id="@+id/txt_sche_update_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:hint="전화번호"
                android:phoneNumber="true"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/sche_imageview"
                android:layout_width="240dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/default_photos" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom" >

            <Button
                android:id="@+id/btn_sche_history"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/btn_common"
                android:text="히스토리"
                android:textColor="@color/color_dialog_btn_text" />

            <Button
                android:id="@+id/btn_sche_gallery"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/btn_common"
                android:text="사진"
                android:textColor="@color/color_dialog_btn_text" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>